# Database Configuration
# Path to the application database file (default: ./app.db)
DATABASE_PATH=./app.db

# Server Configuration
# Port for the development server (default: 3000)
PORT=3000

# Email Configuration (Phase 2+)
# SMTP configuration for sending magic link emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_AUTH_USER=your-email@gmail.com
SMTP_AUTH_PASS=your-app-password
EMAIL_FROM_ADDRESS=noreply@insight-magician.com

# Authentication Configuration (Phase 2+)
# Base URL for magic link generation
APP_URL=http://localhost:3000
# Development vs Production environment
NODE_ENV=development