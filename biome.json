{
  "files": {
    "ignore": ["node_modules/**", "uploads/**", "test-results/**"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "include": [
      "public/**",
      "lib/**",
      "routes/**",
      "tests/**",
      "*.js",
      "*.json"
    ]
  },
  "linter": {
    "include": [
      "public/**",
      "lib/**",
      "routes/**",
      "tests/**",
      "*.js",
      "*.json"
    ],
    "ignore": ["test-*.js", "scripts/**"],
    "rules": {
      "suspicious": {
        "noConsoleLog": "error"
      }
    }
  }
}
